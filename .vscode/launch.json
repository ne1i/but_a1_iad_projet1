{
  // Use IntelliSense to learn about possible attributes.
  // Hover to view descriptions of existing attributes.
  // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Debug (Windows)",
      "type": "cppvsdbg",
      "program": "${workspaceFolder}/app.exe",
      "request": "launch",
      "console": "externalTerminal",
      "stopAtEntry": false,
      "cwd": "${workspaceRoot}",
      "preLaunchTask": "Build (MSVC)"
    },
    {
      "name": "Debug (Linux)",
      "type": "cppdbg",
      "program": "${workspaceFolder}/app.out",
      "request": "launch",
      "externalConsole": false,
      "stopAtEntry": false,
      "cwd": "${workspaceRoot}",
      "preLaunchTask": "Build (GCC)"
    },
    {
      // redirect content of test_commands.txt to stdin by using > operator
      "name": "Launch initial tests (Windows)",
      "type": "cppvsdbg",
      "request": "launch",
      "console": "externalTerminal",
      "program": "${workspaceFolder}/app.exe",
      "args": [
        "<",
        "${workspaceFolder}/test.txt"
      ],
      "stopAtEntry": false,
      "cwd": "${fileDirname}",
      "preLaunchTask": "Build (MSVC)"
    }
  ]
}